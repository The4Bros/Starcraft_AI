        <attribute type="0" value="2.0">targetRadius</attribute>
        <attribute type="1" value="20">damage</attribute>
        <attribute type="0" value="200.0">sightRange</attribute>
        <attribute type="0" value="90.0">attackRange</attribute>
        <attribute type="0" value="0.5">attackSpeed</attribute>
        <attribute type="3" value="false">kites</attribute>
        <attribute type="3" value="false">flees</attribute>
      </entity>
      <entity name="unit_2">
        <attribute type="1" value="50">hp</attribute>
